@inject NavigationManager Navigation
@page "/PlayerPage"

<style>
div {
		 display: flex;
		justify-content: center;
    }
</style>

<div margin="">
	@*<h3>Registrera spelare</h3>*@
	<br />
	<form>
		<div>
			<label for="name">Name:</label>
			<input type="text" id="name" @bind="player.Name" />
		</div>
		
		<button type="submit" @onclick="CreatePlayer">READY</button>
	</form>
</div>
<br />
<div>
	<p>@player.Name</p>
</div>
@code {
	private Player player = new Player();

	private void CreatePlayer()
	{

		if (player.Name != null)
			Navigation.NavigateTo($"/Host/{player.Name}");
	}
}
