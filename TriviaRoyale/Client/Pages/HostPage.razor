@page "/Host/{RoomId}"

@inject HostService service;






<PageTitle>Trivia Royale</PageTitle>

@switch(service.GameState)
{

    case GameState.Playing:
    case GameState.PlayerToAnswer:
        <TriviaRoyale.Client.Shared.Host.QuestionScreen.QuestionScreen />
        break;
    case GameState.Ended:
        <TriviaRoyale.Client.Shared.Host.GameEnd />
        break;
    default:
        <PlayerJoinScreen />
        break;
}






