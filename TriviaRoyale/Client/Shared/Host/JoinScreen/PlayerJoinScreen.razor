@using System.Web;
@inject HostService service;
@inject NavigationManager navigation;
<h3>PlayerJoinScreen</h3>

<div class="container">
    <div class="row mb-5">
        <div class="d-flex justify-content-between">
            <div id="QR-output">
                <a href="@(navigation.BaseUri + "player/defaultRoom")" target="_blank">
                <img class="img-fluid" src="/qr/@encodedUrl" alt="QRcode with link to game" />
                </a>
            </div>
            <div id="player-list" class="border-2 flex-grow-1">
                @if(!service.IsConnected)
                {
                    <div class="d-flex justify-content-center text-light">
                        <h5 class="me-3">Connecting to server</h5>
                        <span class="spinner-border" role="status"></span>
                    </div>
                }
                else if(service.Players.Count == 0)
                {
                    <div class="d-flex justify-content-center text-light">
                        <h5 class="me-3">Waiting for players</h5>
                        <span class="spinner-border" role="status"></span>
                    </div>

                }
                else
                {
                    <div class="d-flex flex-column">
                        @foreach(var player in service.Players)
                        {
                            <PlayerComponent Player="player" />
                        }
                    </div>
                    <div class="d-flex justify-content-center text-light">
                        <h5 class="me-3">Waiting for more players</h5>
                        <span class="spinner-border" role="status"></span>
                    </div>
                    <div class="d-flex justify-content-center text-light">
                        <h5 class="me-3">Press "Start Game" When everyone is ready</h5>
                        
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="row">
        <div class="d-flex justify-content-center">
            <button class="btn btn-secondary p-5" disabled="@(service.Players.Count < 2)" @onclick="StartGame">
                <span class="h1">
                    Start Game
                </span>
            </button>
        </div>
    </div>
</div>

@code {
    string encodedUrl = "";
    void StartGame()
    {
        System.Console.WriteLine("Start Game");
    }
    protected override void OnInitialized()
    {
        encodedUrl = HttpUtility.UrlEncode(navigation.BaseUri + "player/defaultRoom");

    }

    protected override async Task OnInitializedAsync()
    {
        service.OnChange += StateHasChanged;

        

    }


    

    public void Dispose()
    {
        service.OnChange -= StateHasChanged;
    }

}
